{
    "openapi": "3.1.0",
    "info" : {
        "title": "Exercice 04 - Pokemon API",
        "summary": "API permettant de gérer des pokemons avec des opérations CRUD",
        "description": "Cette API permet de gérer une base de données de pokemons. Elle offre des opérations CRUD complètes : consulter un pokemon par son identifiant, afficher une liste paginée avec filtre par type, ajouter, modifier et supprimer des pokemons.",
        "contact": {
            "name": "API Pokemon",
            "url": "http://localhost:3000/",
            "email": "2444332@etudiant.cegepvicto.ca"
        },
        "version": "1.0.0"
    },
    "servers": [
    {
        "url": "http://localhost:3000/",
        "description": "Serveur de développement"
    }
    ],
    "paths" : {
        "/api": {
            "get": {
                "summary": "Message de bienvenue",
                "tags": ["Accueil"],
                "responses": {
                    "200": {
                        "description": "Retourne un message de bienvenue",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Bienvenue à l'API de Pokémon!"
                                }               
                            }
                        }
                    }
                }
            }
        },
        "/api/pokemons/{id}" : {
            "get" : {
                "description" : "Retourne le pokemon avec l'identifiant au choix",
                "summary" : "Récupérer pokemon avec l'ID",
                "tags" : ["Pokémon ID"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "description": "Id du pokémon",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32",
                            "example" : 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Pokémon retrouvé avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "pokemon": {
                                            "type": "string",
                                            "example": "Nidoking"
                                        },
                                        "type_primaire": {
                                            "type": "string",
                                            "example": "Poison"
                                        },
                                        "type_secondaire": {
                                            "type": "string",
                                            "example": "Ground"
                                        },
                                        "pv": {
                                            "type": "integer",
                                            "example": "81"
                                        },
                                        "attaque": {
                                            "type": "integer",
                                            "example": "102"
                                        },
                                        "defense": {
                                            "type": "integer",
                                            "example": "77"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404" : {
                        "description": "Pokémon non rencontrée",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Pokemon introuvable avec l'id 1245"
                                        }
                                    }
                                }   
                            }
                        }
                    },
                    "500" : {
                        "description": "Pokémon non rencontrée",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Echec lors de la récupération du pokemon avec l'id 1245"
                                        }
                                    }
                                }   
                            }
                        }
                    }
                }
            }
        },
        "/api/pokemons/liste" : {
            "get" : {
                "description" : "Retourne la liste de 25 pokemons paginée",
                "summary" : "Récupérer pokemon avec la page et le type",
                "tags" : ["Liste paginée Pokémon"],
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Numéro de la page",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1,
                            "minimum": 1,
                            "example": 1
                        }
                    },
                    {
                        "name": "type",
                        "in": "query",
                        "description": "Filtrer par type primaire (ex: Grass, Fire, Water, ect..)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "Poison"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Liste de Pokémon récupérée avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "pokemons": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "nom": {
                                                        "type": "string",
                                                        "example": "Nidoking"
                                                    },
                                                    "type_primaire": {
                                                        "type": "string",
                                                        "example": "Poison"
                                                    },
                                                    "type_secondaire": {
                                                        "type": "string",
                                                        "nullable": true,
                                                        "example": "Ground"
                                                    },
                                                    "pv": {
                                                        "type": "integer",
                                                        "example": 81
                                                    },
                                                    "attaque": {
                                                        "type": "integer",
                                                        "example": 102
                                                    },
                                                    "defense": {
                                                        "type": "integer",
                                                        "example": 77
                                                    }
                                                }
                                            }
                                        },
                                        "type": {
                                            "type": "string",
                                            "example": "Poison"
                                        },
                                        "nombrePokemonTotal": {
                                            "type": "integer",
                                            "example": 42
                                        },
                                        "page": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "totalPage": {
                                            "type": "integer",
                                            "example": 2
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500" : {
                        "description": "Erreur lors de la récupération des Pokémons",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Echec lors de la récupération de la liste des pokemons"
                                        }
                                    }
                                }   
                            }
                        }
                    }
                }
            }
        }
    }
}
