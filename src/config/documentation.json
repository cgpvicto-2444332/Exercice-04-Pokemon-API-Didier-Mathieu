{
    "openapi": "3.1.0",
    "info" : {
        "title": "Exercice 04 - Pokemon API",
        "summary": "API permettant de gérer des pokemons avec des opérations CRUD",
        "description": "Cette API permet de gérer une base de données de pokemons. Elle offre des opérations CRUD complètes : consulter un pokemon par son identifiant, afficher une liste paginée avec filtre par type, ajouter, modifier et supprimer des pokemons.",
        "contact": {
            "name": "API Pokemon",
            "url": "http://localhost:3000/",
            "email": "2444332@etudiant.cegepvicto.ca"
        },
        "version": "1.0.0"
    },
    "servers": [
    {
        "url": "http://localhost:3000/",
        "description": "Serveur de développement"
    }
    ],
    "paths" : {
        "/api": {
            "get": {
                "summary": "Message de bienvenue",
                "tags": ["Accueil"],
                "responses": {
                    "200": {
                        "description": "Retourne un message de bienvenue",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Bienvenue à l'API de Pokémon!"
                                }               
                            }
                        }
                    }
                }
            }
        },
        "/api/pokemons" : {
            "post": {
                "summary": "Ajouter un Pokémon",
                "tags": ["Ajouter Pokémon"],
                "description": "Ajouter un pokémon en fournissant un nom, le type_primaire, le type_secondaire, les pv, l'attaque et la défense",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nom": {
                                        "type": "string",
                                        "example": "Charetard"
                                    },
                                    "type_primaire": {
                                        "type": "string",
                                        "example": "Fire"
                                    },
                                    "type_secondaire": {
                                        "type": "string",
                                        "example": "Flying",
                                        "nullable": true
                                    },
                                    "pv": {
                                        "type": "integer",
                                        "example": 78
                                    },
                                    "attaque": {
                                        "type": "integer",
                                        "example": 84
                                    },
                                    "defense": {
                                        "type": "integer",
                                        "example": 78
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Pokémon ajouté avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Le pokemon [Charetard] a été ajouté avec succès"
                                        },
                                        "pokemon": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1073
                                                },
                                                "nom": {
                                                    "type": "string",
                                                    "example": "Charetard"
                                                },
                                                "type_primaire": {
                                                    "type": "string",
                                                    "example": "Fire"
                                                },
                                                "type_secondaire": {
                                                    "type": "string",
                                                    "example": "Flying",
                                                    "nullable": true
                                                },
                                                "pv": {
                                                    "type": "integer",
                                                    "example": 78
                                                },
                                                "attaque": {
                                                    "type": "integer",
                                                    "example": 84
                                                },
                                                "defense": {
                                                    "type": "integer",
                                                    "example": 78
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erreur de paramètres manquants",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "erreur": {
                                            "type": "string",
                                            "example": "Le format des données est invalide"
                                        },
                                        "champ_manquant": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            },
                                            "example": ["pv", "attaque"]
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500" : {
                        "description": "Erreur serveur",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Echec lors de la création du pokemon [Charitard]"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/pokemons/{id}" : {
            "get" : {
                "description" : "Retourne le pokemon avec l'identifiant au choix",
                "summary" : "Récupérer pokemon avec l'ID",
                "tags" : ["Pokémon ID"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "description": "Id du pokémon",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32",
                            "example" : 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Pokémon retrouvé avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "nom": {
                                            "type": "string",
                                            "example": "Nidoking"
                                        },
                                        "type_primaire": {
                                            "type": "string",
                                            "example": "Poison"
                                        },
                                        "type_secondaire": {
                                            "type": "string",
                                            "example": "Ground"
                                        },
                                        "pv": {
                                            "type": "integer",
                                            "example": "81"
                                        },
                                        "attaque": {
                                            "type": "integer",
                                            "example": "102"
                                        },
                                        "defense": {
                                            "type": "integer",
                                            "example": "77"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404" : {
                        "description": "Pokémon non rencontrée",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Pokemon introuvable avec l'id 1245"
                                        }
                                    }
                                }   
                            }
                        }
                    },
                    "500" : {
                        "description": "Pokémon non rencontrée",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Echec lors de la récupération du pokemon avec l'id 1245"
                                        }
                                    }
                                }   
                            }
                        }
                    }
                }
            },
            "put" : {
                "description" : "Modifie le pokemon avec l'identifiant au choix",
                "summary" : "Modifier pokemon avec l'ID",
                "tags" : ["Pokémon ID"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "description": "Id du pokémon",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32",
                            "example" : 1
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nom": {
                                        "type": "string",
                                        "example": ""
                                    },
                                    "type_primaire": {
                                        "type": "string",
                                        "example": ""
                                    },
                                    "type_secondaire": {
                                        "type": "string",
                                        "example": "",
                                        "nullable": true
                                    },
                                    "pv": {
                                        "type": "integer",
                                        "example": 0
                                    },
                                    "attaque": {
                                        "type": "integer",
                                        "example": 0
                                    },
                                    "defense": {
                                        "type": "integer",
                                        "example": 0
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Pokémon modifié avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Le pokemon id [id] a été modifié avec succès"
                                        }
                                    }
                                }   
                            }
                        }
                    },
                    "404" : {
                        "description": "Pokémon non rencontré",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "erreur": {
                                            "type": "string",
                                            "example": "Le pokemon id [id] n'existe pas dans la base de données"
                                        }
                                    }
                                }   
                            }
                        }
                    },
                    "400" : {
                        "description": "Erreur de paramètres manquants",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "erreur": {
                                            "type": "string",
                                            "example": "Le format des données est invalide"
                                        },
                                        "champs_manquants": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            },
                                            "example": ["pv", "attaque"]
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500" : {
                        "description": "Pokémon non modifié",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "erreur": {
                                            "type": "string",
                                            "example": "Echec lors de la modification du pokemon [nom_du_pokemon]"
                                        }
                                    }
                                }   
                            }
                        }
                    }
                }
            },
            "delete" : {
                "description" : "Supprime le pokemon avec l'identifiant au choix",
                "summary" : "Supprime pokemon avec l'ID",
                "tags" : ["Pokémon ID"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "description": "Id du pokémon",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32",
                            "example" : 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Pokémon supprimé avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Le pokemon id [id] a été supprimé avec succès"
                                        }
                                    }
                                }   
                            }
                        }
                    },
                    "404" : {
                        "description": "Pokémon non rencontré",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "erreur": {
                                            "type": "string",
                                            "example": "Le pokemon id [id] n'existe pas dans la base de données"
                                        }
                                    }
                                }   
                            }
                        }
                    },
                    "500" : {
                        "description": "Pokémon non supprimé",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "erreur": {
                                            "type": "string",
                                            "example": "Echec lors de la suppression du pokemon [nom_du_pokemon]"
                                        }
                                    }
                                }   
                            }
                        }
                    }
                }
            }
        },
        "/api/pokemons/liste" : {
            "get" : {
                "description" : "Retourne la liste de 25 pokemons paginée",
                "summary" : "Récupérer pokemon avec la page et le type",
                "tags" : ["Liste paginée Pokémon"],
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Numéro de la page",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1,
                            "minimum": 1,
                            "example": 1
                        }
                    },
                    {
                        "name": "type",
                        "in": "query",
                        "description": "Filtrer par type primaire (ex: Grass, Fire, Water, ect..)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "Poison"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Liste de Pokémon récupérée avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "pokemons": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 50
                                                    },
                                                    "nom": {
                                                        "type": "string",
                                                        "example": "Nidoking"
                                                    },
                                                    "type_primaire": {
                                                        "type": "string",
                                                        "example": "Poison"
                                                    },
                                                    "type_secondaire": {
                                                        "type": "string",
                                                        "nullable": true,
                                                        "example": "Ground"
                                                    },
                                                    "pv": {
                                                        "type": "integer",
                                                        "example": 81
                                                    },
                                                    "attaque": {
                                                        "type": "integer",
                                                        "example": 102
                                                    },
                                                    "defense": {
                                                        "type": "integer",
                                                        "example": 77
                                                    }
                                                }
                                            }
                                        },
                                        "type": {
                                            "type": "string",
                                            "example": "Poison"
                                        },
                                        "nombrePokemonTotal": {
                                            "type": "integer",
                                            "example": 42
                                        },
                                        "page": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "totalPage": {
                                            "type": "integer",
                                            "example": 2
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500" : {
                        "description": "Erreur lors de la récupération des Pokémons",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Echec lors de la récupération de la liste des pokemons"
                                        }
                                    }
                                }   
                            }
                        }
                    }
                }
            }
        }
    }
}
